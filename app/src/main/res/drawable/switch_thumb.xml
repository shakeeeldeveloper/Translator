<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_checked="true">
    <layer-list>
      <item>
        <shape android:shape="oval">
          <solid android:color="#2890ff" /> <!-- Blue when ON -->
          <size android:width="40dp" android:height="40dp" />
          <stroke android:color="#2890ff" android:width="3dp"/>

        </shape>
      </item>
      <item android:drawable="@drawable/switch_icon_on" android:gravity="center" />
    </layer-list>
  </item>

  <item>
    <layer-list>
      <item>
        <shape android:shape="oval">
          <solid android:color="#F44336" /> <!-- Red when OFF -->
          <size android:width="40dp" android:height="40dp" />
          <stroke android:color="#de6240" android:width="3dp"/>
        </shape>
      </item>
      <item android:drawable="@drawable/switch_icon_off" android:gravity="center" />
    </layer-list>
  </item>
</selector>
